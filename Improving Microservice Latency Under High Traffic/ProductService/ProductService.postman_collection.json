							"name": "Step 2: Same Search (Cache Hit)",
							"request": {
								"method": "GET",
								"header": [],
								"url": {
									"raw": "{{baseUrl}}/api/products/search?query=test",
									"host": [
										"{{baseUrl}}"
									],
									"path": [
										"api",
